{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "dotnet-20-node",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "NAME_SUFFIX",
            "displayName": "Name",
            "description": "The suffix for all created objects",
            "required": false,
            "value": ""
        },
        {
            "name": "VERSION",
            "displayName": "VERSION",
            "required": true
        },
        {
            "name": "SOURCE_GIT_URL",
            "displayName": "SOURCE_GIT_URL",
            "description": "The GIT repository URL",
            "required": true,
            "value": "https://github.com/bcgov/agri-nmp.git"
        },
        {
            "name": "SOURCE_GIT_REF",
            "displayName": "SOURCE_GIT_REF",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "dotnet-20-node",
                "creationTimestamp": null,
                "labels": { "shared": "true" }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "dotnet-20-node${NAME_SUFFIX}",
                "creationTimestamp": null,
                "labels": null
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_GIT_URL}",
                        "ref": "${SOURCE_GIT_REF}"
                    },
                    "contextDir": "OpenShift/s2i-dotnetcore-node"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "dotnet-20-rhel7:2.0"
                        },
                        "dockerfilePath": "Dockerfile.rhel7"
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "dotnet-20-node:${VERSION}"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
