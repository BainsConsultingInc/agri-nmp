@model SERVERAPI.ViewModels.PrevYearManureApplicationViewModel

@{
    Layout = null;
}
<div id="target">
    <form asp-action="PrevYearManureApplicationDetails" asp-controller="Nutrients" class="form-inline" id="modForm" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Previous year's manure - Edit</h4>
        </div>

        <div class="modal-body">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-12">
                    <label asp-for="nitrogen" style="padding-right:5px">Nitrogen available from previous year's manure applications</label>
                    <a href="~/Controllers/Calculate" target="_blank"><span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="About other nutrient sources" style="font-size:20px; padding-top:5px"></span></a>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <b>N  Credit: &nbsp; &nbsp;</b>
                    <div class="input-group">
                        <input class="form-control" asp-for="nitrogen" id="tbNitrogen" type="text" />
                        <span class="input-group-btn" title="Reset to standard value">
                            <button class="btn btn-default" type="button" id="rstNitrogen" style="background-color:orange"><i class="glyphicon glyphicon-refresh" style="background-color:orange"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <span asp-validation-for="nitrogen"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="ok_button">Save Changes</button>
        </div>
        @Html.HiddenFor(x => x.fldName)
    </form>
</div>

<script type="text/javascript">

        $("#rstNitrogen").click(function () {
            $('#tbNitrogen').val("@Model.defaultNitrogenCredit");
        });

</script>