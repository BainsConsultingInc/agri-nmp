@model SERVERAPI.ViewModels.OtherDetailsViewModel

@{
    Layout = null;
}
<div id="target">
    <form asp-action="OtherDetails" asp-controller="Nutrients" id="modForm" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Other Details - @Model.title</h4>
        </div>

        <div class="modal-body">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-group col-sm-6">
                        <label asp-for="source">Nutrient Source</label>
                        <input class="form-control" asp-for="source" id="source" type="text" />
                        <span asp-validation-for="source" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="nitrogen">N</label>
                        <input class="form-control" asp-for="nitrogen" id="source" type="text" />
                        <span asp-validation-for="nitrogen" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="phospherous">P2O5</label>
                        <input class="form-control" asp-for="phospherous" id="phospherous" type="text" />
                        <span asp-validation-for="phospherous" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="potassium">K2O</label>
                        <input class="form-control" asp-for="potassium" id="source" type="text" />
                        <span asp-validation-for="potassium" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="form-group col-sm-2">
                        <label asp-for="amount">Amount</label>
                        <div>
                            <input class="form-control" asp-for="amount" id="source" type="text" />
                            <label>lbs/ac</label>
                        </div>
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="ok_button">@Model.btnText</button>
        </div>
        @Html.HiddenFor(x => x.title)
        @Html.HiddenFor(x => x.id)
        @Html.HiddenFor(x => x.fieldName)
        @Html.HiddenFor(x => x.btnText)
    </form>
</div>
