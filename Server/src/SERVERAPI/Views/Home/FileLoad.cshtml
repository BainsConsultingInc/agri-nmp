@model SERVERAPI.ViewModels.FileLoadViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">File Load</h4>
    </div>

    <form method="post" asp-action="FileLoad" asp-controller="Home" enctype="multipart/form-data">

        <div class="modal-body">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload your Nutrient Plan:</p>
                    <input type="file" id="filename" name="filename"  />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input type="submit" value="Upload" />
        </div>

    </form>

</div>
