@model SERVERAPI.ViewModels.FinishWarningViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Warning - Unsaved Data</h4>
    </div>

    <form asp-action="FinishWarning" asp-controller="Report" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target" id="warnForm">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p class="text-danger">There is currently an active file open that has changes that have not been downloaded - to continue without downloading the current file please select Continue.</p>
            </div>
            <br />
            <br />
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="button" value="Save Changes" onclick="location.href='@Url.Action("Download", "Home")'" />
            <input class="btn btn-primary" type="submit" value="Continue" />
        </div>
    </form>
</div>
