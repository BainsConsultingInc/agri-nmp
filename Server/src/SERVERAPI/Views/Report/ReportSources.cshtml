@model SERVERAPI.ViewModels.ReportSourcesViewModel

<div class="Row">
    <div class="Cell">
        <span style="font-size:20px"><b>Manure and Fertilizer Required</b></span>
        <br />
        <br />
        <br />
    </div>
</div>
<div class="Row">
    <div class="Cell">
        <table style="border-collapse: collapse; width:100%">
                <tr>
                    <td class="CellHdg" style="width:70%">
                        <span style="font-size:13px">Material Type</span>
                    </td>
                    <td class="CellHdg" style="text-align:center; width:30%">
                        <span style="font-size:13px">Total Ammount Required in @Model.year</span>
                    </td>
                </tr>
                @foreach (var n in Model.details)
                {
                    <tr>
                        <td class="CellDtl">@n.nutrientName</td>
                        <td class="CellDtl" style="text-align:center">
                            @n.nutrientAmount @n.nutrientUnit
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
