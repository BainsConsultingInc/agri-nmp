@model SERVERAPI.ViewModels.ReportSheetsViewModel

<div style="display: table-row;">
    <div style="display: table-cell;">
        <span style="font-size:20px"><b>Record Keeping Sheets</b></span>
        <br />
        <br />
        <br />
        <br />
    </div>
</div>
<div class="Row">
    <div class="Cell">
        @foreach (var f in Model.fields)
        {
            <table style="border-collapse: collapse; width: 100%;">
                <tr>
                    <td style="width:20%; vertical-align: top">
                        <span style="font-size:16px">Field: @f.fieldName</span>
                    </td>
                    <td style="width:15%; vertical-align: top">
                        <span style="font-size:14px">Area: @f.fieldArea ac</span>
                    </td>
                    <td style="width:10%; vertical-align: top">
                        <span style="font-size:14px">@Model.year Crops:</span>
                    </td>
                    <td style="width:35%; vertical-align: top">
                        <span style="white-space: pre-line; font-size:14px">@f.fieldCrops</span>
                    </td>
                    <td style="width:20%; vertical-align: top">
                        <span style="font-size:14px">Actual Yield:</span>
                    </td>
                </tr>
            </table>
            <table style="border-collapse: collapse; width: 100%;">
                <tr>
                    <td>
                        <table style="border-collapse: collapse; border-bottom: 1px solid black; width: 100%">
                            <tr>
                                <td style="width:50%; background-color:#a4cdd8;text-align:center; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black" colspan="3">
                                    <span style="font-size:14px">@Model.year Plan</span>
                                </td>
                                <td style="width:50%; background-color:#a4cdd8;text-align:center; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black" colspan="3">
                                    <span style="font-size:14px">@Model.year Records</span>
                                </td>
                            </tr>                            
                            <tr>
                                <td style="background-color:#a4cdd8; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black">
                                    <span style="font-size:14px">Application:</span>
                                </td>
                                <td style="background-color:#a4cdd8; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black">
                                    <span style="font-size:14px">Timing</span>
                                </td>
                                <td style="background-color:#a4cdd8; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black;text-align:center">
                                    <span style="font-size:14px">Rate</span>
                                </td>
                                <td style="background-color:#a4cdd8; text-align:center; padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black" colspan="3">
                                    <span style="font-size:14px">Notes or modifications to plan</span>
                                </td>
                            </tr>
                            @foreach (var m in f.nutrients)
                            {
                                <tr style="padding-top:5px; padding-bottom:5px; border-top: 1px solid black; border-bottom: 1px solid black">
                                    <td style="padding:4px">
                                        <span style="font-size:14px"> @m.nutrientName</span>
                                    </td>
                                    <td style="padding:4px">
                                        <span style="font-size:14px">@m.nutrientSeason</span>
                                    </td>
                                    <td style="padding:4px">
                                        <table style="width:100%">
                                            <tr>
                                                <td style="text-align:right; width:50%"><span style="font-size:14px">@m.nutrientAmount</span></td>
                                                <td style="text-align:left; padding-left:3px; width:50%"><span style="font-size:14px">lb/ac</span></td>
                                            </tr>
                                        </table>
                                        
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <br />
            <br />
        }
    </div>
</div>

