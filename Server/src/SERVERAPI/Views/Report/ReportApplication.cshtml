@model SERVERAPI.ViewModels.ReportApplicationViewModel

<div class="Row">
    <div class="Cell">
        <span style="font-size:20px"><b>Application Schedule</b></span>
        <br />
        <br />
        <br />
    </div>
</div>
<div class="Row">
    <div class="Cell">
        @foreach (var f in Model.fields)
        {
            <table style="border-collapse: collapse; border: 2px solid black; width: 100%;">
                <tr style="border: 1px solid black;">
                    <td colspan="3">
                        <table style="width: 100%; border: none;">
                            <tr>
                                <td style="width:20%; vertical-align: top">
                                    <span style="padding:4px; font-size:15px">Field: @f.fieldName</span>
                                </td>
                                <td style="width:15%; vertical-align: top">
                                    <span style="padding:4px; font-size:13px">Area: @f.fieldArea ac</span>
                                </td>
                                <td style="width:10%; vertical-align: top">
                                    <span style="padding:4px; font-size:13px">@Model.year Crops:</span>
                                </td>
                                <td style="width:35%; vertical-align: top; text-align: left">
                                    <span style="white-space: pre-line; font-size:13px; padding:4px; ">@f.fieldCrops</span>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr style="border: 1px solid black; padding:4px; ">
                    <td style="padding:4px; border: 1px solid black; background-color:#a4cdd8; width:45%">
                        <span style="font-size:13px">Nutrient Source</span>
                    </td>
                    <td style="padding:4px; border: 1px solid black; background-color:#a4cdd8; width:35%">
                        <span style="font-size:13px">Application Timing</span>
                    </td>
                    <td style="padding:4px; border: 1px solid black; background-color:#a4cdd8;text-align:center; width:20%">
                        <span style="font-size:13px">Rate</span>
                    </td>
                </tr>
                @foreach (var m in f.nutrients)
                {
                    <tr style="border: 1px solid black;">
                        <td style="padding:4px; width:45%; border-right: 1px solid black;">
                            <span style="font-size:13px"> @m.nutrientName</span>
                        </td>
                        <td style="padding:4px; width:35%; border-right: 1px solid black;">
                            <span style="font-size:13px">@m.nutrientSeason</span>
                        </td>
                        <td style="padding:4px; width:20%; border-right: 1px solid black; text-align:center">
                            <span style="font-size:13px">@m.nutrientAmount @m.nutrientUnit</span>
                        </td>
                    </tr>
                }
            </table>
            <br />
            <br />
            <br />
            <br />
        }
    </div>
</div>

