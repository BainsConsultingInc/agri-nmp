@model SERVERAPI.ViewModels.ReportApplicationViewModel

<div class="Row">
    <div class="Cell">
        <h2>Nutrient Application Schedule</h2>
    </div>
</div>
<div class="Row">
    <div class="Cell">
        <table  style="border-collapse: collapse;">
            @foreach (var f in Model.fields)
            {
                <tr style="padding-top:20px; padding-bottom:20px; border: 1px solid black;">
                    <td colspan="2" style="padding-bottom:5px; font-size:16px">
                        <b>Field: </b>@f.fieldName
                    </td>
                    <td colspan="3" style="padding-bottom:5px;">
                        <b>Crops: </b>@f.fieldCrops
                    </td>
                </tr>
                <tr style="border: 1px solid black;">
                    <td style="width:250px; border: 1px solid black; background-color:#a7aecc; padding:5px">
                        <b>Nutrient Source</b>
                    </td>
                    <td style="width:250px; border: 1px solid black; background-color:#a7aecc; padding:5px">
                        <b>Application Timing</b>
                    </td>
                    <td style="width:250px; border: 1px solid black; background-color:#a7aecc; padding:5px">
                        <b>Method</b>
                    </td>
                    <td colspan="2" style="text-align:center; width:200px; border: 1px solid black; background-color:#a7aecc;">
                        <b>Rate</b>
                    </td>
                </tr>
                @foreach (var n in f.nutrients)
                {
                    <tr>
                        <td style="width:250px; border: 1px solid black; padding:5px">@n.nutrientName</td>
                        <td style="width:250px; border: 1px solid black; padding:5px">@n.nutrientSeason</td>
                        <td style="width:250px; border: 1px solid black; padding:5px">@n.nutrientApplication</td>
                        <td style="text-align:right; width:100px; border: 1px solid black; padding:5px">@n.nutrientAmount</td>
                        <td style="text-align:left; width:100px; border: 1px solid black; padding:5px">@n.nutrientUnit</td>
                    </tr>
                }
                <tr style="border: 1px solid black;">
                    <td colspan="5">
                        <u>Comments:</u><br />
                        @if(string.IsNullOrEmpty(f.fieldComment))
                        {
                            @Html.Raw("&nbsp;");
                        }
                        @f.fieldComment
                    </td>
                </tr>
                <tr>
                    <td colspan="5">&nbsp;</td>
                </tr>
            }
        </table>
    </div>
</div>
