@model SERVERAPI.ViewModels.ReportApplicationViewModel

<div class="Row">
    <div class="Cell">
        <span style="font-size:20px"><b>Application Schedule</b></span>
        <br />
        <br />
        <br />
    </div>
</div>
<div class="Row">
    <div class="Cell">
        @foreach (var f in Model.fields)
        {
            <table style="border-collapse: collapse; border: 2px solid black; width: 100%;">
                <tr style="border: 1px solid black;">
                    <td colspan="3">
                        <table style="width: 100%; border: none;">
                            <tr>
                                <td class="CellHdgNBd" style="width:20%;">
                                    <span style="font-size:15px">Field: @f.fieldName</span>
                                </td>
                                <td class="CellHdgNBd" style="width:15%">
                                    <span style="font-size:13px">Area: @f.fieldArea ac</span>
                                </td>
                                <td class="CellHdgNBd" style="width:10%">
                                    <span style="font-size:13px">@Model.year Crops:</span>
                                </td>
                                <td class="CellHdgNBd" style="width:35%">
                                    <span style="white-space: pre-line">@f.fieldCrops</span>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="CellHdg" style="width:45%">
                        <span style="font-size:13px">Nutrient Source</span>
                    </td>
                    <td class="CellHdg" style="width:35%">
                        <span style="font-size:13px">Application Timing</span>
                    </td>
                    <td class="CellHdg" style="text-align:center; width:20%">
                        <span style="font-size:13px">Rate</span>
                    </td>
                </tr>
                @foreach (var m in f.nutrients)
                {
                    <tr style="border: 1px solid black;">
                        <td style="padding:4px; border-right: 1px solid black;">
                            <span style="font-size:13px"> @m.nutrientName</span>
                        </td>
                        <td style="padding:4px; border-right: 1px solid black;">
                            <span style="font-size:13px">@m.nutrientSeason</span>
                        </td>
                        <td style="padding:4px; border-right: 1px solid black; text-align:center">
                            <span style="font-size:13px">@m.nutrientAmount @m.nutrientUnit</span>
                        </td>
                    </tr>
                }
            </table>
            <br />
            <table style="border-collapse: collapse; border: none; width: 100%;">
                <tr>
                    <td style="padding:4px; border: none;border-bottom: 1px solid black; width:45%">
                        <span style="font-size:13px">Comments:</span>
                    </td>
                    <td colspan="2" style="width:55%"></td>
                </tr>
                <tr>
                    <td colspan="3">
                        <span style="font-size:13px">@f.fieldComment</span>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <br />
            <br />
        }
    </div>
</div>

