@model SERVERAPI.ViewModels.ReportSummaryViewModel

<div class="Row">
    <div class="Cell">
        <span style="font-size:10pt"><b>Soil Test Results</b></span>
        <br />
        <br />
        <br />
    </div>
</div>
<div class="Row">
    <div class="Cell">
        <table style="border-collapse: collapse; width: 100%">
            <tr>
                <td class="CellHdg" style="width: 30%">
                    Soil Test P and K Method
                </td>
                <td class="CellDtl" style="width: 70%">
                    @Model.testMethod
                </td>
            </tr>
        </table>
        <br />
        <br />
        <table style="border-collapse: collapse; width: 100%">
            <tr>
                <td class="CellHdg" style="width:200px">
                    Field
                </td>
                <td class="CellHdg" style="width: 100px">
                    Sampling Date
                </td>
                <td class="CellHdg" style="width:250px">
                    @Model.year Crops
                </td>
                <td class="CellHdg" style="width: 80px; text-align:center">
                    pH
                </td>
                <td class="CellHdg" style="width: 100px; text-align:center">
                    NO<sub>3</sub>-N (ppm)
                </td>
                <td class="CellHdg" colspan="2" style="width: 120px; text-align:center">
                    P<sub>2</sub>O<sub>5</sub> (ppm)
                </td>
                <td class="CellHdg" colspan="2" style="width: 120px; text-align:center">
                    K<sub>2</sub>O (ppm)
                </td>
            </tr>
            @foreach (var test in Model.tests)
            {
                <tr>
                    <td class="CellDtl" style="vertical-align:top">
                        @test.fieldName
                    </td>
                    <td class="CellDtl" style="vertical-align:top">
                        @test.sampleDate
                    </td>
                    <td class="CellDtl" style="vertical-align:top;">
                        <span style="white-space: pre-line">@test.fieldCrops</span>
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.pH
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.nitrogen
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.phosphorous
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.phosphorousRange
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.potassium
                    </td>
                    <td class="CellDtl" style="text-align:center; vertical-align:top">
                        @test.potassiumRange
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
