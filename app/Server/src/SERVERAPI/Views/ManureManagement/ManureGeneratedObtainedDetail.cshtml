@model SERVERAPI.ViewModels.ManureManagementViewModel
@{
    Layout = null;
}
<div id="target">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Manure Generated Details </h4>
    </div>

    <form asp-action="ManureGeneratedObtainedDetail" asp-controller="ManureManagement" id="modForm" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-group col-sm-3">
                        <label>Animal Type</label>
                        <div>
                            <select class="form-control" id="ddlAnimalType">
                                <option>select</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Subtype</label>
                        <div>
                            <select class="form-control" id="ddlSubtype">
                                <option>select</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Average Animal Number on Farm</label>
                        <div>
                            <input asp-for="animalNumber" class="col-sm-2" />
                            <span asp-validation-for="animalNumber"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Manure Type</label>
                        <div>
                            <select class="form-control" id="ddlManureType">
                                <option>select</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </form>
</div>

